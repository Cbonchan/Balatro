class Mazo{
    - cartas: List<Carta>
    +Mazo(): void
    +obtenerCartas(): List<CartaPoker>
}

class Tablero {
    - mano: Mano
    - cartasArcana: List<CartaArcana>
    - cartasJoker: List<CartaJoker>
    + jugarMano(mano: Mano): int
    - calcularPuntajePorMano(): int
    - calcularPuntajeFinal(): int
}

