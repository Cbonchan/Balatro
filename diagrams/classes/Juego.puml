@startuml
class Juego {
    - jugador: Jugador
    + iniciarRonda(): void
    + finalizarRonda(): void
}

class Jugador {
    - nombre: String
    - mano: Mano
    - puntaje: int

    +seleccionarCarta(cartas: CartaPoker): void
    +jugarMano(): void
    + obtenerPuntajeTotal(): int
/'
    + obtenerMano(): Mano
'/
    - asignarPuntaje(puntaje: int)

}

class Mano {
    - cartas: List<Carta>
    + agregarCarta(carta: Carta): void
    + puntajeMano(): int
}

abstract class Carta {

    + obtenerValor(): int
    + obtenerPalo(): String
}

class CartaPoker extends Carta{
    - valor: int
    +sumarValor(valorAcumulado: int): int
}

class CartaArcana extends Carta{
}

class CartaJoker extends Carta{
}

class Evaluador {
    + evaluarMano(mano: Mano): int
}

interface Jugada{
    +Jugada(List<Carta>)
    +calcularPuntaje(): int
}

